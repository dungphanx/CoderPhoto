<div class="card">
		<div class="card-header">
			<div class="avatar">
				<%= image_tag Faker::Avatar.image(photo.username, '32x32') %>
			</div>
			<%= photo.username %>
			<span class="timestamp pull-xs-right"><%= time_ago_in_words photo.created_at %></span>
		</div>
		<%= image_tag(photo.url, class: "card-img") %>
		<p class="card-text"><%= photo.caption %></p>
		<%= pluralize photo.likes_count, 'like' %>

		<div class="card-footer">
			<% photo.comments.each do |comment| %>
				<p><strong><%= comment.username %>:</strong><%= comment.body %></p>
			<% end %>
		</div>	
	</div>